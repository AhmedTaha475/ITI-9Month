<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<style>
    .leftSideDiv{
        background-color:orange;
        width:900px;
    }
    #parent{
        display: flex;
    }
    .RightSideDiv{
        width:900px;
        display:flex;
        justify-content:center;
        flex-direction:column;
        align-items:center;
        font-size:20px;
    }
   
    
</style>
<body>
    @{ 
        var background = Request.Form["background"];
        var backgroundPath = "";
        if (background!=null)
        {
            backgroundPath = "/backgrounds/" + background;
        }

        var color = Request.Form["color"];
        var greeting = Request.Form["greeting"];
        var greetingPath = "";
        if (greeting != null && (Request.Form["add"]=="ok"))
        {
            greetingPath = "/images/" + greeting;
        }
        var comment = Request.Form["comment"];
    }

    <div id="parent">
        <form action="" method="post">


            <div class="leftSideDiv">
                <div>
                    <label>Choose Background Image</label>
                    <br />
                    <select name="background">
                        <option value="1.jpg">1</option>
                        <option value="2.jpg">2</option>
                        <option value="3.jpg">3</option>
                        <option value="4.jpg">4</option>
                        <option value="5.jpg">5</option>
                        <option value="6.jpg">6</option>
                        <option value="7.jpg">7</option>
                        <option value="8.jpg">8</option>
                        <option value="9.jpg">9</option>
                        <option value="10.jpg">10</option>
                        <option value="11.jpg">11</option>
                    </select>
                </div>
                <br />
                <div>
                    <label>Choose a font color</label>
                    <br />
                    <select name="color">
                        <option value="black">black</option>
                        <option value="red">red</option>
                        <option value="green">green</option>
                        <option value="blue">blue</option>
                        <option value="orange">orange</option>
                        <option value="brown">brown</option>
                    </select>
                </div>
                <br />
                <hr />
                <div>
                    <label> Choose a greeting Type:  </label>
                    <br />
                    <input type="radio" name="greeting" value="1.jpg" />: Birthday
                    <br />
                    <input type="radio" name="greeting" value="2.jpg" />:Get Well Soon
                    <br />
                    <input type="radio" name="greeting" value="3.gif" />:Valentine
                    <br />
                    <input type="radio" name="greeting" value="4.gif" />:Congrats
                    <br />
                    <br />
                </div>

                <input type="checkbox" name="add" value="ok" checked /> :Add The Picture
                <br />
                <br />
                <label>Enter the Greeting Message Below</label><br />
                <textarea rows="6" cols="30" name="comment"></textarea>

                <br />
                <br />
                <input type="submit" value="Preview" />
            </div>

        </form>
        @if (IsPost)
        {
            <div class="RightSideDiv" style="background-image:url(@backgroundPath);color:@color">
                
                <img src="@greetingPath" alt="Alternate Text" width="400" height="300"/>
                <br />
                <br />
                <h1>@comment</h1>
            </div>
        }

    </div>

  










</body>
</html>
